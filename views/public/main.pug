<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Двери тут
    link(rel="stylesheet", href="css/style.css")
  body.page-main

    include ./modules/header

    main.main
      .container

        include ./modules/sidebar

        section.main-section
          .slider
            img.new-year-img(src="img/img/dde71a2a (1).png", alt="branch")
            .slider-news
              h1.headling1 Новогодние скидки!
              p.text С 24 декабря по 20 января
              button.sale-btn Перейти к распродаже
          ul.slider-btn-list
            for i in ['','','','','','']
              li.item
                button.slider-dot-btn
          ul.content
            each i, num in doors
              li.doors-kind
                h2.headling2=i
                ul.models
                  each j in models[num]
                    li.model-item
                      img(src=j.src, alt="img").m-img
                      p.m-title=j.text
                      p.m-count=j.count
                .m-link
                  each b in link[num]
                    a(href="#").doorLink=b

    include ./modules/footer





